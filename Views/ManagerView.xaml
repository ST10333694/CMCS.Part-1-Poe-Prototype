<Window x:Class="CMCS.Views.ManagerView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manager Portal" Height="520" Width="820">
    <DockPanel LastChildFill="True">
        <!-- Header -->
        <Border DockPanel.Dock="Top" Height="64" Background="#2D2D30">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0">
                <TextBlock Text="📝 CMCS" FontSize="22" FontWeight="Bold" Foreground="{StaticResource AccentColor}" />
                <TextBlock Text="  | Manager Portal" FontSize="16" Foreground="White" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <Grid Background="{StaticResource PrimaryBackground}" Margin="18">
            <Border Background="{StaticResource CardBackground}" CornerRadius="12" Padding="16">
                <StackPanel>
                    <TextBlock Text="Manager Approval Dashboard" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
                    <TextBlock Text="Coordinator-Approved Claims" Foreground="{StaticResource SubtleText}" />
                    <ListBox Height="280">
                        <ListBoxItem>Claim #1037 — Coordinator Approved — 15h — R6,750</ListBoxItem>
                        <ListBoxItem>Claim #1034 — Coordinator Approved — 11h — R4,950</ListBoxItem>
                    </ListBox>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,12,0,0">
                        <Button Content="Final Approve" Width="160"/>
                        <Button Content="Final Reject" Width="160"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </DockPanel>
</Window>
