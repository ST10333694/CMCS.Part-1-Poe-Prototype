<Window x:Class="CMCS.Views.LecturerView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lecturer Portal" Height="520" Width="820">
    <DockPanel LastChildFill="True">
        <!-- Header -->
        <Border DockPanel.Dock="Top" Height="64" Background="#2D2D30">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0">
                <TextBlock Text="📝 CMCS" FontSize="22" FontWeight="Bold" Foreground="{StaticResource AccentColor}" />
                <TextBlock Text="  | Lecturer Portal" FontSize="16" Foreground="White" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <Grid Background="{StaticResource PrimaryBackground}" Margin="18">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="1.2*" />
            </Grid.ColumnDefinitions>

            <!-- Form Card -->
            <Border Background="{StaticResource CardBackground}" CornerRadius="12" Padding="16" Margin="0,0,12,0">
                <StackPanel>
                    <TextBlock Text="Submit New Claim" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
                    <TextBlock Text="Hours Worked" Foreground="{StaticResource SubtleText}" />
                    <TextBox />

                    <TextBlock Text="Hourly Rate" Foreground="{StaticResource SubtleText}" />
                    <TextBox />

                    <TextBlock Text="Description" Foreground="{StaticResource SubtleText}" />
                    <TextBox AcceptsReturn="True" Height="80" TextWrapping="Wrap"/>

                    <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                        <Button Content="Upload Supporting Document" />
                        <Button Content="Submit Claim" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Status Card -->
            <Border Grid.Column="1" Background="{StaticResource CardBackground}" CornerRadius="12" Padding="16">
                <StackPanel>
                    <TextBlock Text="Your Claim Status" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
                    <ListBox>
                        <ListBoxItem>Claim #1023 — Pending</ListBoxItem>
                        <ListBoxItem>Claim #1018 — Approved</ListBoxItem>
                        <ListBoxItem>Claim #1012 — Rejected</ListBoxItem>
                    </ListBox>
                </StackPanel>
            </Border>
        </Grid>
    </DockPanel>
</Window>
