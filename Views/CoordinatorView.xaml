<Window x:Class="CMCS.Views.CoordinatorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Coordinator Portal" Height="520" Width="820">
    <DockPanel LastChildFill="True">
        <!-- Header -->
        <Border DockPanel.Dock="Top" Height="64" Background="#2D2D30">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0">
                <TextBlock Text="📝 CMCS" FontSize="22" FontWeight="Bold" Foreground="{StaticResource AccentColor}" />
                <TextBlock Text="  | Coordinator Portal" FontSize="16" Foreground="White" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <Grid Background="{StaticResource PrimaryBackground}" Margin="18">
            <Border Background="{StaticResource CardBackground}" CornerRadius="12" Padding="16">
                <StackPanel>
                    <TextBlock Text="Coordinator Dashboard" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
                    <TextBlock Text="Incoming Claims" Foreground="{StaticResource SubtleText}" />
                    <ListBox Height="280">
                        <ListBoxItem>Claim #1041 — Awaiting Review — 12h @ R450</ListBoxItem>
                        <ListBoxItem>Claim #1040 — Awaiting Review — 8h @ R450</ListBoxItem>
                        <ListBoxItem>Claim #1038 — Revised — 10h @ R450</ListBoxItem>
                    </ListBox>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,12,0,0">
                        <Button Content="Approve" Width="140"/>
                        <Button Content="Reject" Width="140"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </DockPanel>
</Window>
